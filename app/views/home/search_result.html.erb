<ul>
<% @notes.each do |note| %>
	<li style="border: solid 1px;">
		<div><%= link_to note.title, note_path(note.id) %></div>
		<div><%= note.content %></div>
		<div><%= link_to note.like_count, liking_users_note_path(note.id) %>人がいいね！といっています</div>
		<div><%= note.created_at %></div>
		<% if note.photo.present? %>
			<a href="<%= note.photo.url(:medium) %>"><%= image_tag note.photo.url(:medium) %></a>
		<% else %>
			<div>写真がありません</div>
		<% end %>
	</li>
<% end %>
</ul>
