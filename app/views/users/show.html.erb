<aside class="sidebar">
  <section>
    <span class="label">プロフィール画像</span>
    <h3 class="user-info">
      <%= image_for(@user) %>
    </h3>
  </section>

  <section>
    <span class="label">ユーザー名</span>
    <h3 class="user-info"><%= @user.name %></h3>
  </section>

  <section>
    <span class="label">使える言語</span>
    <h3 class="user-info"><%= @user.language %></h3>
  </section>

  <section>
    <span class="label">興味のある業種</span>
    <h3 class="user-info"><%= @user.job %></h3>
  </section>

  <%= link_to @user.likes.count, like_notes_user_path(@user.id) %>個の投稿にいいね！しています

  <% if current_user?(@user) %>
    <section>
      <small><%= link_to 'プロフィールを編集', edit_user_path(@user) %></small>
    </section>
  <% end %>

</aside>

<%= link_to "新規投稿", new_note_path %>
<ul class="notes">
  <h2><%= @title %></h2>
  <%= render @notes %>
</ul>
